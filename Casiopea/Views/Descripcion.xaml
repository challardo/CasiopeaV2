<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Casiopea.Views.Descripcion">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Test"/>
            <Label Text="Product Description"/>
            <Label x:Name="ID"/>
            <Label x:Name="NOMBRE"/>
            <Label x:Name="PRECIO"/>
            <Label x:Name="DESCRIPCION"/>
            <Label x:Name="CATEGORIA"/>
            <Image x:Name="IMAGEN"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition  Width="*" />
                </Grid.ColumnDefinitions>

                <ImageButton  BackgroundColor="Transparent" HorizontalOptions="Start" Grid.Column="0"  Source="fav.png"/>
                <Button Grid.Column="1" BackgroundColor="Black" TextColor="White" HorizontalOptions="FillAndExpand" Text="Añadir al carrito"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>